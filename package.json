{
  "name": "ai-cost-optimizer-cli",
  "version": "1.0.9",
  "description": "Command-line interface for AI Cost Optimizer - Track, analyze, and optimize AI API costs across multiple providers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cost-katana": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "dev": "tsc -w",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "ci:test": "npm test",
    "ci:lint": "npm run lint",
    "ci:format": "npx prettier --check 'src/**/*.ts'",
    "ci:build": "npm run build",
    "ci:check": "npm pack --dry-run",
    "ci:security": "npm audit --audit-level=moderate"
  },
  "keywords": [
    "ai",
    "cost-tracking",
    "cli",
    "command-line",
    "ai-optimization",
    "cost-analysis",
    "ai-gateway",
    "typescript",
    "openai",
    "anthropic",
    "aws-bedrock",
    "google-ai",
    "cohere",
    "mistral",
    "deepseek",
    "groq",
    "xai",
    "cost-katana",
    "ai-cost-optimizer",
    "prompt-optimization",
    "cost-management",
    "ai-pricing"
  ],
  "author": "Abdul Sagheer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hypothesize-Tech/ai-cost-optimizer-cli.git"
  },
  "bugs": {
    "url": "https://github.com/Hypothesize-Tech/ai-cost-optimizer-cli/issues"
  },
  "homepage": "https://github.com/Hypothesize-Tech/ai-cost-optimizer-cli#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "ai-cost-tracker": "^1.4.4",
    "axios": "^1.6.0",
    "boxen": "^7.1.1",
    "chalk": "^5.5.0",
    "commander": "^11.1.0",
    "conf": "^12.0.0",
    "dotenv": "^16.3.1",
    "figlet": "^1.7.0",
    "gradient-string": "^2.0.2",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "table": "^6.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
